---
import Footer from "./Footer.astro"
---

<section id="accessories" class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative" data-header-color="black">
    <div class="z-30 relative h-full flex flex-col">
        <header >
            <h2 class="text-black pt-[95px] text-[40px] font-medium">Accesorios</h2>
        </header>

        <footer class="flex flex-col flex-grow justify-end pb-16">
            <div class="gap-x-6 flex mx-auto">
                <a class="border-[3px] border-black bg-black text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors duration-300 hover:border-gray-800 hover:bg-gray-800" href="#">Comprar ahora</a>
            </div>
        </footer>
    </div>
    
    <div class="absolute top-0 bottom-0 h-full w-full z-10">
        <img src="/accessories.avif" alt="Model Y" class="h-full w-full object-cover object-center">
    </div>
    <Footer />
</section>

